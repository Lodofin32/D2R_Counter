<Window x:Class="MozaCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MozaCounter"
        mc:Ignorable="d"
        Title="MZCounter" Height="230" Width="250"
        Icon="Resources/icon_32.png">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 1. 실행/중지 라디오버튼 -->
        <GroupBox Header="상태" Grid.Row="0" Margin="0,0,0,10" ToolTip="카운터의 실행 상태를 제어합니다">
            <StackPanel Orientation="Horizontal" Margin="5">
                <RadioButton x:Name="RadioStart" Content="실행" IsChecked="True" Margin="0,0,20,0" GroupName="Status" Checked="RadioButton_CheckedChanged"
                             ToolTip="카운터를 실행합니다. 설정된 트리거 키를 누르면 카운트다운이 시작됩니다"/>
                <RadioButton x:Name="RadioStop" Content="중지" GroupName="Status" Checked="RadioButton_CheckedChanged"
                             ToolTip="카운터를 중지합니다. 트리거 키를 눌러도 반응하지 않습니다"/>
                <TextBlock x:Name="TxtStatus" Text="실행중" VerticalAlignment="Center" Margin="30,0,0,0" FontWeight="Bold" Foreground="Green"
                           ToolTip="현재 카운터의 실행 상태를 표시합니다"/>
            </StackPanel>
        </GroupBox>

        <!-- 2. 키 선택 -->
        <GroupBox Header="키 선택" Grid.Row="1" Margin="0,0,0,10" ToolTip="사용할 트리거 키를 선택합니다">
            <StackPanel Orientation="Horizontal" Margin="5">
                <CheckBox x:Name="ChkKey1" Content="Key1 (Space)" IsChecked="True" Margin="0,0,20,0" Checked="ChkKey_CheckedChanged" Unchecked="ChkKey_CheckedChanged"
                          ToolTip="Key1을 활성화/비활성화합니다. 체크하면 Key1의 트리거 키가 동작합니다"/>
                <CheckBox x:Name="ChkKey2" Content="Key2 (D)" IsChecked="True" Checked="ChkKey_CheckedChanged" Unchecked="ChkKey_CheckedChanged"
                          ToolTip="Key2를 활성화/비활성화합니다. 체크하면 Key2의 트리거 키가 동작합니다"/>
            </StackPanel>
        </GroupBox>

        <!-- 3. 설정 -->
        <GroupBox Header="설정" Grid.Row="2" Margin="0,0,0,10" ToolTip="카운터의 상세 설정을 변경합니다">
            <StackPanel Margin="5">
                <Button x:Name="BtnSettings" Content="설정 열기" Padding="5" Click="BtnSettings_Click"
                        ToolTip="설정 창을 엽니다. 폰트, 색상, 위치, 트리거 키 등을 변경할 수 있습니다"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
