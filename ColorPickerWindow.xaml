<Window x:Class="MozaCounter.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MozaCounter"
        mc:Ignorable="d"
        Title="색상 선택" Height="400" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- RGB 슬라이더 -->
        <GroupBox Header="RGB 값" Grid.Row="0" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <!-- Red -->
                <Label Content="R:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <Slider x:Name="SliderR" Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="255" 
                        Value="255" Margin="5,0" VerticalAlignment="Center" ValueChanged="Slider_ValueChanged"/>
                <TextBox x:Name="TxtSliderR" Grid.Row="0" Grid.Column="2" Text="255" 
                         Margin="5,0,0,0" VerticalAlignment="Center" TextChanged="TxtSlider_TextChanged"/>

                <!-- Green -->
                <Label Content="G:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <Slider x:Name="SliderG" Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="255" 
                        Value="255" Margin="5,5,5,0" VerticalAlignment="Center" ValueChanged="Slider_ValueChanged"/>
                <TextBox x:Name="TxtSliderG" Grid.Row="1" Grid.Column="2" Text="255" 
                         Margin="5,5,0,0" VerticalAlignment="Center" TextChanged="TxtSlider_TextChanged"/>

                <!-- Blue -->
                <Label Content="B:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <Slider x:Name="SliderB" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="255" 
                        Value="255" Margin="5,5,5,0" VerticalAlignment="Center" ValueChanged="Slider_ValueChanged"/>
                <TextBox x:Name="TxtSliderB" Grid.Row="2" Grid.Column="2" Text="255" 
                         Margin="5,5,0,0" VerticalAlignment="Center" TextChanged="TxtSlider_TextChanged"/>

                <!-- 미리보기 -->
                <Label Content="미리보기:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <Rectangle x:Name="PreviewRect" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" 
                          Height="40" Margin="5,10,0,0" Stroke="Black" StrokeThickness="1" Fill="White"/>
            </Grid>
        </GroupBox>

        <!-- 기본 색상 팔레트 -->
        <GroupBox Header="기본 색상" Grid.Row="1" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="ColorPalette" Margin="5"/>
            </ScrollViewer>
        </GroupBox>

        <!-- 버튼 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnOk" Content="확인" Width="80" Padding="5" Margin="0,0,10,0" Click="BtnOk_Click"/>
            <Button x:Name="BtnCancel" Content="취소" Width="80" Padding="5" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
