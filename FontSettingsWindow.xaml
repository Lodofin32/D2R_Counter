<Window x:Class="MozaCounter.FontSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MozaCounter"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="설정" Height="500" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Icon="Resources/icon32.png">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 폰트 설정 -->
        <GroupBox Header="폰트 설정" Grid.Row="0" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                
                <Label Content="종류:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,0"/>
                <ComboBox x:Name="CmbFontFamily" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0" SelectionChanged="CmbFontFamily_SelectionChanged"/>
                
                <Label Content="크기:" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,0,0"/>
                <TextBox x:Name="TxtFontSize" Grid.Column="3" Text="24" VerticalAlignment="Center" Margin="0,0,5,0" TextChanged="TxtFontSize_TextChanged"/>
                
                <Label Content="색상:" Grid.Column="4" VerticalAlignment="Center" Margin="0,0,0,0"/>
                <xctk:ColorPicker x:Name="FontColorPicker" Grid.Column="5"
                                  SelectedColor="White" 
                                  DisplayColorAndName="False"
                                  ShowAvailableColors="True"
                                  ShowRecentColors="True"
                                  VerticalAlignment="Center"
                                  SelectedColorChanged="FontColorPicker_SelectedColorChanged"/>
            </Grid>
        </GroupBox>

        <!-- 테두리 설정 -->
        <GroupBox Header="폰트배경 설정" Grid.Row="1" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                
                <Label Content="두께:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Slider x:Name="SliderBorderThickness" Grid.Column="1" 
                        Minimum="0" Maximum="10" Value="2" 
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        VerticalAlignment="Center" Margin="0,0,5,0"
                        ValueChanged="SliderBorderThickness_ValueChanged"/>
                <Label x:Name="LblBorderThickness" Content="2" Grid.Column="2" 
                       VerticalAlignment="Center" Margin="0,0,10,0" MinWidth="20"/>
                
                <Label Content="색상:" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <xctk:ColorPicker x:Name="BorderColorPicker" Grid.Column="4"
                                  SelectedColor="Black" 
                                  DisplayColorAndName="False"
                                  ShowAvailableColors="True"
                                  ShowRecentColors="True"
                                  VerticalAlignment="Center"
                                  SelectedColorChanged="BorderColorPicker_SelectedColorChanged"/>
            </Grid>
        </GroupBox>

        <!-- 카운터 위치 설정 -->
        <GroupBox Header="카운터 위치" Grid.Row="2" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="X:" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="TxtPosX" Grid.Column="1" Margin="5,0,10,0" Text="100" VerticalAlignment="Center"/>
                <Label Content="Y:" Grid.Column="2" VerticalAlignment="Center"/>
                <TextBox x:Name="TxtPosY" Grid.Column="3" Margin="5,0,0,0" Text="100" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>

        <!-- 마우스 위치 추적 ON/OFF -->
        <GroupBox Header="마우스 위치 추적" Grid.Row="3" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="5">
                <ToggleButton x:Name="BtnTrackMouse" Content="OFF" Width="80" Click="BtnTrackMouse_Click"/>
                <TextBlock x:Name="TxtMousePos" Margin="10,0,0,0" VerticalAlignment="Center" Text="마우스 위치(F1 입력시 설정): -"/>
            </StackPanel>
        </GroupBox>

        <!-- 카운트 시작 시간 & 트리거 키 -->
        <GroupBox Header="카운트 설정" Grid.Row="4" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                
                <Label Content="시작 시간:" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="TxtStartTime" Grid.Column="1" Text="15" VerticalAlignment="Center" Margin="5,0,10,0"/>
                
                <Label Content="트리거 키:" Grid.Column="2" VerticalAlignment="Center"/>
                <ComboBox x:Name="CmbTriggerKey" Grid.Column="3" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </Grid>
        </GroupBox>

        <!-- 미리보기 -->
        <GroupBox Header="미리보기" Grid.Row="5" Margin="0,0,0,10">
            <Border x:Name="PreviewBorder" Margin="5">
                <TextBlock x:Name="PreviewText" Text="15" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
            </Border>
        </GroupBox>

        <!-- 버튼 -->
        <Grid Grid.Row="6">
            <TextBlock Text="Copyright© Lodofin32 All rights reserved. (v0.25.1)" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left"
                       Foreground="Gray"
                       FontSize="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnOk" Content="확인" Width="80" Padding="5" Margin="0,0,10,0" Click="BtnOk_Click"/>
                <Button x:Name="BtnCancel" Content="취소" Width="80" Padding="5" Click="BtnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
